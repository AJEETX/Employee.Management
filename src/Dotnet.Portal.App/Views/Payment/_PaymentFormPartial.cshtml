@model Dotnet.Portal.App.ViewsModels.PaymentViewModel
@using Dotnet.Portal.App.ViewsModels 

<div class="field">
    <div class="two fields">
        <div class="field">
            <label asp-for="MemberId" class=""></label>
            <select asp-for="MemberId" class="ui dropdown" asp-items="Model.Members">
                <option value="" selected disabled>Select</option>
            </select>
            <span asp-validation-for="MemberId" class="text-danger"></span>
        </div>
        <div class="field">
            <label asp-for="Date" class=""></label>
            <input asp-for="Date" class="" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
    </div>
</div>
<div class="field">
    <div class="two fields">
        <div class="field">
            <label asp-for="PaymentType" class=""></label>
            <select asp-for="PaymentType" class="ui selection dropdown" asp-items="Html.GetEnumSelectList<PaymentTypeViewModel>()">
                <option value="" selected disabled>Select</option>
            </select>
            <span asp-validation-for="PaymentType" class="text-danger"></span>
        </div>
        <div class="field">
            <label asp-for="Amount" class=""></label>
            <input asp-for="Amount" class="" />
            <span asp-validation-for="Amount" class="text-danger"></span>
        </div>
    </div>
</div>

